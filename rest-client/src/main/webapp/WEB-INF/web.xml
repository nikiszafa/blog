<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
	id="WebApp_ID" version="4.0">
	<display-name>Blog</display-name>

	<servlet>
		<servlet-name>HomeServlet</servlet-name>
		<servlet-class>com.blog.niko.servlets.HomeServlet</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>BlogServlet</servlet-name>
		<servlet-class>com.blog.niko.servlets.BlogServlet</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>ViewProfileServlet</servlet-name>
		<servlet-class>com.blog.niko.servlets.ViewProfileServlet</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>LoginServlet</servlet-name>
		<servlet-class>com.blog.niko.servlets.LoginServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>LogoutServlet</servlet-name>
		<servlet-class>com.blog.niko.servlets.LogoutServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>AdminServlet</servlet-name>
		<servlet-class>com.blog.niko.servlets.AdminServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>DeletePostServlet</servlet-name>
		<servlet-class>com.blog.niko.servlets.DeletePostServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>DeleteCardServlet</servlet-name>
		<servlet-class>com.blog.niko.servlets.DeleteCardServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>AddCardServlet</servlet-name>
		<servlet-class>com.blog.niko.servlets.AddCardServlet</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>UploadServlet</servlet-name>
		<servlet-class>com.blog.niko.servlets.UploadServlet</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>GalleryServlet</servlet-name>
		<servlet-class>com.blog.niko.servlets.GalleryServlet</servlet-class>
	</servlet>


	<servlet-mapping>
		<servlet-name>HomeServlet</servlet-name>
		<url-pattern>/HomeServlet</url-pattern>
	</servlet-mapping>


	<servlet-mapping>
		<servlet-name>BlogServlet</servlet-name>
		<url-pattern>/BlogServlet</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>ViewProfileServlet</servlet-name>
		<url-pattern>/ViewProfileServlet</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>LoginServlet</servlet-name>
		<url-pattern>/LoginServlet</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>LogoutServlet</servlet-name>
		<url-pattern>/LogoutServlet</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>AdminServlet</servlet-name>
		<url-pattern>/AdminServlet</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>DeletePostServlet</servlet-name>
		<url-pattern>/DeletePostServlet</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>DeleteCardServlet</servlet-name>
		<url-pattern>/DeleteCardServlet</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>AddCardServlet</servlet-name>
		<url-pattern>/AddCardServlet</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>UploadServlet</servlet-name>
		<url-pattern>/UploadServlet</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>GalleryServlet</servlet-name>
		<url-pattern>/GalleryServlet</url-pattern>
	</servlet-mapping>

</web-app>