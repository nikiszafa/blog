<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
	.button-style {
		font-weight: bold;
		margin-top: 7%;
	}
	

	</ui:style>
	<g:HTMLPanel>

		<div align="center">

			<g:VerticalPanel>
				<g:Label text="Login" />
				<g:TextBox ui:field="loginBox" />
				<g:Label text="Password" />
				<g:PasswordTextBox ui:field="passwordBox" />

				<g:HorizontalPanel verticalAlignment="middle">

					<g:Button ui:field="buttonSubmit" text="Submit"
						styleName="{style.button-style}" />


				</g:HorizontalPanel>

				<g:Label ui:field="completionLabel1" />
				<g:Label ui:field="completionLabel2" />



			</g:VerticalPanel>
		</div>

	</g:HTMLPanel>
</ui:UiBinder> 