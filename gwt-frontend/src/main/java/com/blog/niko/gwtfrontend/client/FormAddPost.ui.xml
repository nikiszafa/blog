<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:dp="urn:import:com.google.gwt.user.datepicker.client">
	<ui:style>
	.postForm-style {
		font-weight: bold;
		width: 100%;
	}
	
	.textbox-style {
		width: 150%;
		margin-top: 5%;
	}


	</ui:style>


	<g:VerticalPanel>

		<g:VerticalPanel>
			<g:Label text="Title" />
			<g:TextBox ui:field="titleBox"
				styleName="{style.textbox-style}" />

			<g:Label text="Autor" />
			<g:TextBox ui:field="autorBox"
				styleName="{style.textbox-style}" />

			<g:Label text="Date" />
			<dp:DatePicker ui:field="dateBox"
				styleName="{style.textbox-style}" />

			<g:Label text="Content" />
			<g:TextArea ui:field="contentBox"
				styleName="{style.textbox-style}" />

			<g:Label text="Image Link" />
			<g:TextBox ui:field="imageBox"
				styleName="{style.textbox-style}" />

			<g:Button ui:field="buttonSubmit" text="Submit"
				styleName="{style.textbox-style}" />

		</g:VerticalPanel>


	</g:VerticalPanel>






</ui:UiBinder> 