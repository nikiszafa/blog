<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
	.cardForm-style {
		font-weight: bold;
		width: 50%;
	}
	</ui:style>

	<g:HTMLPanel styleName="{style.cardForm-style}">

		<div align="center">

			<g:VerticalPanel>
				<g:Label text="Title" />
				<g:TextBox ui:field="titleBox" />

				<g:Label text="Img Link" />
				<g:TextBox ui:field="imgBox" />

				<g:Label text="Content" />
				<g:TextBox ui:field="contentBox" />

				<g:Label text="Button Text" />
				<g:TextBox ui:field="buttonTextBox" />

				<g:Label text="Button Link" />
				<g:TextBox ui:field="buttonLinkBox" />

				<g:Button ui:field="buttonSubmit" text="Submit" />

			</g:VerticalPanel>

		</div>

	</g:HTMLPanel>
</ui:UiBinder> 