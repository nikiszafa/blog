<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
	.cardForm-style {
		font-weight: bold;
		width: 100%;
	}
	
	.textbox-style {
		width: 150%;
		margin-top: 5%;
	}
	</ui:style>

	<g:HTMLPanel styleName="{style.cardForm-style}">

		<div>

			<g:VerticalPanel>
				<g:Label text="Title" />
				<g:TextBox ui:field="titleBox"
					styleName="{style.textbox-style}" />

				<g:Label text="Img Link" />
				<g:TextBox ui:field="imgBox"
					styleName="{style.textbox-style}" />

				<g:Label text="Content" />
				<g:TextArea ui:field="contentBox"
					styleName="{style.textbox-style}" />

				<g:Label text="Button Text" />
				<g:TextBox ui:field="buttonTextBox"
					styleName="{style.textbox-style}" />

				<g:Label text="Button Link" />
				<g:TextBox ui:field="buttonLinkBox"
					styleName="{style.textbox-style}" />

				<g:Button ui:field="buttonSubmit" text="Submit"
					styleName="{style.textbox-style}" />

			</g:VerticalPanel>

		</div>

	</g:HTMLPanel>
</ui:UiBinder> 