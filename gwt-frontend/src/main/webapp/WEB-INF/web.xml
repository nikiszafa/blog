<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>

	<!-- Servlets -->

	<servlet>
		<servlet-name>PostServiceImpl</servlet-name>
		<servlet-class>com.blog.niko.gwtfrontend.server.PostServiceImpl</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>CardServiceImpl</servlet-name>
		<servlet-class>com.blog.niko.gwtfrontend.server.CardServiceImpl</servlet-class>
	</servlet>
	
	<servlet>
		<servlet-name>LoginServiceImpl</servlet-name>
		<servlet-class>com.blog.niko.gwtfrontend.server.LoginServiceImpl</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>PostServiceImpl</servlet-name>
		<url-pattern>/MainModule/getPosts</url-pattern>
	</servlet-mapping>


	<servlet-mapping>
		<servlet-name>CardServiceImpl</servlet-name>
		<url-pattern>/MainModule/getCards</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>LoginServiceImpl</servlet-name>
		<url-pattern>/MainModule/loginService</url-pattern>
	</servlet-mapping>

	<!-- Default page to serve -->
	<welcome-file-list>
		<welcome-file>MainModule.html</welcome-file>
	</welcome-file-list>

</web-app>
